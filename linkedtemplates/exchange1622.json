{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "computerName": {
            "type": "string",
            "metadata": {
                "description": "Computer Name"
            }
        },
        "NetBiosDomain": {
            "type": "string",
            "metadata": {
                "description": "NetBios Domain Name"
            }
        },
        "SetupDC": {
            "type": "string",
            "metadata": {
                "description": "Domain Controller used for Exchange Setup"
            }
        },                            
        "DBName": {
            "type": "string",
            "metadata": {
                "description": "Exchange Database Name"
            }
        },        
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "The name of the Administrator of the new VM and Domain"
            }
        },
        "adminPassword": {
            "type": "securestring",
          "metadata": {
            "description": "The password for the Administrator account of the new VM and Domain"
          }
        },                
        "location": {
            "type": "string",
          "metadata": {
            "description": "Region of Resources"
          }
        }, 
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources, such as templates and DSC modules, that the template depends on"
            }
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation"
            }
        },
               
        "CertURL":{
            "type": "string",
            "defaultValue": "https://www.bozteck.com/wildcard_wingtip_toys.pfx",
        "metadata": {
            "description": "URL to PFX file.  Must be wildcart (for now)"
            }
        },  
        "CertPassword": {
        "type": "securestring",
            "metadata": {
            "description": "password for PFX file"
        }
    }             
    },
    "variables": {
        "ModulesURL": "[uri(parameters('_artifactsLocation'), concat('DSC/EXCHANGE1622.zip', parameters('_artifactsLocationSasToken')))]",
        "ConfigurationFunction": "EXCHANGE1622.ps1\\EXCHANGE1622"
    },
    "resources": [
        {
            "name": "[concat(parameters('computerName'),'/Microsoft.Powershell.DSC')]",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "apiVersion": "2019-03-01",
            "location": "[parameters('location')]",
            "properties": {
                "publisher": "Microsoft.Powershell",
                "type": "DSC",
                "typeHandlerVersion": "2.19",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "ModulesUrl": "[variables('modulesUrl')]",
                    "ConfigurationFunction": "[variables('configurationFunction')]",
                        "Properties": {
                            "NetBiosDomain": "[parameters('NetBiosdomain')]",          
                            "DBName": "[parameters('DBName')]",       
                            "SetupDC": "[parameters('SetupDC')]",   
                            "CertURL": "[parameters('CertURL')]",
                            "CertPassword": "PrivateSettingsRef:CertPassword",                                                                                                     
                            "AdminCreds": {
                                "UserName": "[parameters('adminUsername')]",
                                "Password": "PrivateSettingsRef:AdminPassword"
                            }                                                                                   
                        }
                    },
                    "protectedSettings": {
                        "Items": {
                            "AdminPassword": "[parameters('adminPassword')]",
                            "CertPassword": "[parameters('CertPassword')]"
                        }
                    }                                        
                }
            }
    ]
}
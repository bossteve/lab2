{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "computerName": {
            "type": "string",
            "metadata": {
                "description": "Computer Name"
            }
        },
        "TimeZone": {
            "type": "string",      
            "metadata": {
                "description": "Time Zone"
            }
        },         
        "RootCAName": {
            "type": "string",
            "metadata": {
                "description": "Certificate Authority Name"
            }
        },
        "RootCAHashAlgorithm": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Offline Root CA Algorithm"
        }
        },   
        "RootCAKeyLength": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Offline Root CA Key Length"
        }
        },                    
        "domainName": {
            "type": "string",
            "metadata": {
                "description": "Root Domain Name FQDN"
            }
        },
        "BaseDN": {
            "type": "string",
            "metadata": {
                "description": "Base Domain Distiguished Name"
            }
        },
        "location": {
            "type": "string",
          "metadata": {
            "description": "Region of Resources"
          }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "The name of the Administrator of the new VM and Domain"
            }
        },
        "adminPassword": {
            "type": "securestring",
          "metadata": {
            "description": "The password for the Administrator account of the new VM and Domain"
          }
        },         
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources, such as templates and DSC modules, that the template depends on"
            }
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation"
            }
        }                
    },
    "variables": {
        "ModulesURL": "[uri(parameters('_artifactsLocation'), concat('DSC/ROOTCA.zip', parameters('_artifactsLocationSasToken')))]",
        "ConfigurationFunction": "ROOTCA.ps1\\ROOTCA"
    },
    "resources": [
        {
            "name": "[concat(parameters('computerName'),'/Microsoft.Powershell.DSC')]",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "apiVersion": "2019-03-01",
            "location": "[parameters('location')]",
            "properties": {
                "publisher": "Microsoft.Powershell",
                "type": "DSC",
                "typeHandlerVersion": "2.19",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "ModulesUrl": "[variables('modulesUrl')]",
                    "ConfigurationFunction": "[variables('configurationFunction')]",
                        "Properties": {
                            "TimeZone": "[parameters('TimeZone')]",
                            "domainName": "[parameters('domainName')]",
                            "RootCAName": "[parameters('RootCAName')]",
                            "RootCAHashAlgorithm": "[parameters('RootCAHashAlgorithm')]",                            
                            "RootCAKeyLength": "[parameters('RootCAKeyLength')]",                                                        
                            "BaseDN": "[parameters('BaseDN')]",                            
                            "AdminCreds": {
                                "UserName": "[parameters('adminUsername')]",
                                "Password": "PrivateSettingsRef:AdminPassword"                                                                                   
                            }

                        }
                },
                "protectedSettings": {
                    "Items": {
                        "AdminPassword": "[parameters('adminPassword')]"
                    }
                }                
            }
        }
    ]
}